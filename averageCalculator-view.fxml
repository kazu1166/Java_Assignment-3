<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo2_intellij.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Welcome to Average Calculator!"/>

    <Label text="Enter numbers separated by spaces:" />
    <TextField fx:id="inputNumber"/>

    <!-- for receiving the output -->
    <Button text="Calculate Average" onAction="#onCalculateAvg" />
    <Label fx:id="answer" />
</VBox>
